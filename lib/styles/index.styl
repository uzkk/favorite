.tac
  text-align center

.emphasize
  color #d00

.section-container
  margin 1em auto
  padding 2em
  border-radius .5em
  background-color #fff
  max-width 1080px

  > :first-child
    margin-top 0

  > :last-child
    margin-bottom 0

  p, ul
    margin 0.6em 0
    line-height 1.6

  p.title
    font-weight bold

  p.list
    margin 0

    > :first-child
      display inline-block
      margin 0.6em 0

    &:first-child > *
      margin-top 0

    &:last-child > *
      margin-bottom 0

    & + p.list
      margin-top -0.6em

  ul
    padding-inline-start 1.6em
    &.inline
      display inline-block

  li
    list-style-type none
    &.inline
      display inline-block
    &.medium
      width 9em
    &.short
      width 5em

.button-container
  margin 1.8em auto
  width 30%
  max-width 20em
  min-width 14em

  button
    width 100%
    display block
    margin 0.8em 0
