.favorite.emphasize
  color #d00

.favorite .section
  a:hover
    text-decoration underline

  h3
    font-size 1.2em

  hr
    display block
    border 0
    border-top 2px solid $borderColor
    margin 0.5em 0
    transform translateY(-1px)
    padding 0

  a:hover
    text-decoration underline

  hr
    display block
    border 0
    border-top 2px solid $borderColor
    margin 0.6em 0
    transform translateY(-1px)
    padding 0

  > :first-child
    margin-top 0

  > :last-child
    margin-bottom 0

  p, ul
    margin 0.5em 0
    line-height 1.6
  
  p.comment
    margin 0.2em 0

  p.title
    font-weight bold

  p.list
    margin 0
    > :first-child
      font-weight bold
      display inline-block
      margin 0.5em 0
    &:first-child > *
      margin-top 0
    &:last-child > *
      margin-bottom 0
    & + p.list
      margin-top -0.5em

  ul
    padding-inline-start 1.6em
    &.inline
      display inline-block

  li
    list-style-type none
    &.inline
      display inline-block
    &.medium
      width 9em
    &.short
      width 5em

  &.collapse-view
    .collapse-header h3
      margin 0
    .collapse-content > :first-child
      margin-top 1em

  table
    max-width 100%
    border-collapse collapse
    margin 1.5rem auto 0
    text-align center

  tr
    border-top 1px solid #dfe2e5
    &:nth-child(2n)
      background-color #f6f8fa

  th, td
    border 1px solid #dfe2e5
    padding .5em 1em

.favorite .button-container
  margin 1.8em auto
  width 30%
  max-width 20em
  min-width 14em
  text-align center

  button
    width 100%
    display block
    margin 0.6em 0
